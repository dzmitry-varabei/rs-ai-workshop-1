{
  "name": "@english-learning/infra-memory",
  "version": "0.1.0",
  "description": "In-memory implementations of domain repositories for testing and development",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "check": "pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "@english-learning/domain": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}