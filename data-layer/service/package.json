{
  "name": "@english-learning/data-layer-service",
  "version": "0.1.0",
  "type": "module",
  "description": "Database service layer with HTTP API for English Learning System",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "check": "pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "@english-learning/data-layer-domain": "workspace:*",
    "@english-learning/data-layer-implementations-memory": "workspace:*",
    "@english-learning/data-layer-implementations-supabase": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "dotenv": "^16.6.1",
    "fastify": "^4.24.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}